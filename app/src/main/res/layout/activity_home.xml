<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/home_background">

    <ImageView
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/home_icon" />

    <TextView
        android:layout_width="322dp"
        android:layout_height="53dp"
        android:fontFamily="@font/poppinssemibold"
        android:paddingLeft="25dp"
        android:text="Welcome To"
        android:textColor="#243642"
        android:textSize="40sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/title_rounded_corner"
        android:fontFamily="@font/poppinsextrabold"
        android:paddingLeft="25dp"
        android:text="EzSail"
        android:textColor="#243642"
        android:textSize="50sp"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/newCompBtn"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3CACAD"
        android:fontFamily="@font/poppinsmedium"
        android:text="New Competition"
        android:textSize="20sp" />

    <Button
        android:id="@+id/allCompBtn"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#233440"
        android:fontFamily="@font/poppinsmedium"
        android:text="All Competitions"
        android:textSize="20sp" />

</LinearLayout>